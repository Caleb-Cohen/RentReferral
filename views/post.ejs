<section class="w-full max-w-2xl px-6 py-4 mx-auto shadow-lg">

  <p class="mt-3 text-center">
      Want to get in touch with this user? Email them here:
  </p>

  <form action="/contact" method="POST" class="mt-6">
      <div class="items-center -mx-2 md:flex">

          <div class="w-full mx-2">
              <label class="block mb-2 text-sm font-medium">Name</label>

              <input class="block w-full px-4 py-2 text-black-700 bg-white border rounded-md" type="text" name="yourname" required>
          </div>

          <div class="w-full mx-2 mt-4 md:mt-0">
              <label class="block mb-2 text-sm font-medium">E-mail</label>

              <input class="block w-full px-4 py-2 text-black-700 bg-white border rounded-md" type="email" name="youremail" required>
          </div>
      </div>

      <div class="w-full mt-4">
          <label class="block mb-2 text-sm font-medium">Message</label>

          <textarea class="block w-full h-40 px-4 py-2 text-black-700 bg-white border rounded-md" name="yourmessage" required></textarea>
      </div>

      <div class="w-full mx-2 visibility: hidden">
        <label class="block mb-2 text-sm font-medium">PostersEmail</label>
        <input class="block w-full px-4 py-2 text-black-700 bg-white border rounded-md" type="text" name="postemail" value="<%= post.user %>" required>
        </div>

      <div class="flex justify-center mt-6">
          <button class="btn btn-ghost" type="submit" value="send">Send</button>
      </div>
  </form>
</section>

